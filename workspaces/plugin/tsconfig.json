{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "lib": [
      "esnext"
    ],
    "types": [
      "node",
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}